#!/usr/bin/with-contenv bash

# for mariadb

echo "This may take a while, be patient!"
find /config -type d -exec chmod 0755 {} \; &
find /config -type f -exec chmod 0644 {} \;

chmod 755 "/config/Library/Application Support/Plex Media Server/Codecs/EasyAudioEncoder-1165-linux-x86_64/EasyAudioEncoder/EasyAudioEncoder"

echo "Please restart the container"
